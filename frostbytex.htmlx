    <button class="benchmark-btn" onclick="window.open('https://www.youtube.com/watch?v=dQw4w9WgXcQ', '_blank')">See Benchmarks</button>
  </div>

  <script>
    const images = ["frostbyte1.jpg", "frostbyte2.jpg", "frostbyte3.jpg"];
    let currentImage = 0;

    function changeImage(direction) {
      currentImage = (currentImage + direction + images.length) % images.length;
      document.getElementById("productImage").src = images[currentImage];
    }
  </script>

</body>
</html>

